.che-list-header-column
  line-height 50px
  text-transform uppercase
  color $list-header-color

  .header-sort-direction
    display inline-block
    position relative
    height 100%
    margin-left 5px
    text-align center
    vertical-align middle

    i
      font-size 20px
      color $menu-bg-color

    .fa-sort-asc::before
      position relative
      top 5px

    .fa-sort-desc::before
      position relative
      top 2px
