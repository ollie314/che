.workspace-item-row
  min-height 40px

.workspace-item-row div
  outline none

.workspace-item-details
  line-height 22px
  cursor pointer


  & > *:last-child
    margin-right 10px

  & .che-xs-header
    display inline-block
    float left
    text-transform uppercase
    vertical-align middle
    color $primary-color
    min-width 65px


.workspace-item-name
  font-size 1em
  color $label-primary-color

  & > *
   display inline-block
   line-height 22px
   float left

  .spinner > div
    float left

.workspace-actions
  margin-right 10px
  display inline-block
  vertical-align middle
  color $list-action-color

  a
    text-decoration none
    color inherit

  & > *:hover
    color $list-action-hover-color

  & > *:not(.tooltip)
    display inline-block
    float left
    height 22px
    margin-right 10px

  *:before
    position relative
    top 1px
    font-size 22px

  .fa-plus-square-o:before
    position relative
    top 2px

.workspace-item-temp
  color $label-info-color

.workspace-resources-locked
  background-color $error-color
  color $white-color
  padding 5px 10px
  border-radius 5px

.workspace-consumed-value, .workspace-no-consumed-value
  font-size 12px
  font-weight bold

.workspace-consumed-value
  color #4e5a96

.workspace-no-consumed-value
  color $label-info-color

.workspace-list-item-arrow md-icon
  height 32px !important
  line-height 35px
  width 36px !important
  font-size 32px !important

.workspace-list-item-arrow button
  font-size 11px !important

.workspace-list-item-checkbox
  .che-list-item-checkbox-main md-checkbox.che-list-item-checkbox
    display inline-block
  .che-list-item-checkbox-main md-icon
    display none

.workspace-list-item-checkbox > div
  width 100px
